#! /bin/sh

prefix=@package_prefix@
includedir="-I@prefix@/include @xml2_include@"
libdir=@libdir@

usage()
{
    cat <<EOF
Usage: libpki-config [OPTION]

Known values for OPTION are:

  --prefix		get libpki prefix [default $prefix]
  --libs		print library linking information
  --ldflags		print library linking configuration
  --ldlibs		print library linked libraries
  --include		print library include directory
  --cflags		print pre-processor and compiler flags
  --help		display this help and exit
  --version		output version information
EOF

    exit $1
}

if test $# -eq 0; then
    usage 1
fi

cflags=false
libs=false

while test $# -gt 0; do
    case "$1" in
    -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
    *) optarg= ;;
    esac

    case "$1" in

    --prefix)
	echo $prefix
	;;

    --version)
	echo @PACKAGE_VERSION@
	exit 0
	;;

    --include)
	echo ${includedir}
	exit 0
	;;

    --help)
	usage 0
	;;

    --cflags)
       	echo @libpki_cflags@
       	;;

    --ldflags)
       	echo @rpath@ @libpki_ldflags@
       	;;

    --ldadd)
       	echo @libpki_ldadd@
       	;;

    --ldlibs)
       	echo @my_ldflags@ @my_ldadd@
       	;;

    --libs)
       	echo @rpath@ -lpki @libpki_ldflags@ @libpki_ldadd@
       	;;

    *)
	usage
	exit 1
	;;
    esac
    shift
done

exit 0
